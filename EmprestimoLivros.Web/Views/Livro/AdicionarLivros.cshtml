@model EmprestimoLivros.Web.Models.Livro

<h2>Adicionar um novo livro</h2>

<form asp-action="AdicionarLivros" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Titulo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Autor" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ImagemCapa" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="file" name="fotoCapa" asp-for="ImagemCapa" class="form-control" id="inputImagem" />
                <span asp-validation-for="ImagemCapa" class="text-danger"></span>
            </div>
        </div>

        <div id="previewContainer" class="col-md-10">
            <img id="imagemPreview" src="#" alt="Imagem Preview" style="display:none; width:40%;" />
        </div>
        <div class="form-group">
            <label asp-for="AnoPublicacao" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="number" asp-for="AnoPublicacao" class="form-control" />
                <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Disponivel" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="checkbox" asp-for="Disponivel"/>
                <span asp-validation-for="Disponivel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar</a>
            </div>
        </div>
    </div>
</form>

<!-- Adicione o jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Adicione a biblioteca jQuery Mask -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        // Quando o valor do input de arquivo for alterado
        $('#inputImagem').change(function () {
            exibirImagemPreview(this);
        });

        // Função para exibir a imagem selecionada
        function exibirImagemPreview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imagemPreview').attr('src', e.target.result);
                    $('#imagemPreview').show();
                }

                reader.readAsDataURL(input.files[0]); // Converte para base64
            } else {
                // Limpa a imagem se o input de arquivo estiver vazio
                $('#imagemPreview').attr('src', '#');
                $('#imagemPreview').hide();
            }
        }
    });
</script>
